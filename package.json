{
  "name": "youtube-batch-dl",
  "version": "1.0.0",
  "description": "このスクリプトは、YouTube のチャンネル・再生リスト・単体動画をまとめてダウンロードできるツールです。 以下の特徴と使い方をまとめます。",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:vite\" \"wait-on http://localhost:5173 && npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "electron . --dev",
    "build": "vite build && electron-builder",
    "build:win": "vite build && electron-builder --win",
    "build:win-portable": "vite build && electron-builder --win portable",
    "build:win-installer": "vite build && electron-builder --win nsis",
    "build:mac": "vite build && electron-builder --mac",
    "build:mac-universal": "vite build && electron-builder --mac --universal",
    "build:all": "vite build && electron-builder -mwl",
    "build:vite": "vite build",
    "preview": "vite preview",
    "test": "echo \"Error: no test specified\" && exit 1",
    "tailwind:watch": "tailwindcss -i ./src/index.css -o ./dist/styles.css --watch",
    "tailwind:build": "tailwindcss -i ./src/index.css -o ./dist/styles.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gumigumih/youtube-batch-dl.git"
  },
  "keywords": [
    "youtube",
    "downloader",
    "electron",
    "gui"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/gumigumih/youtube-batch-dl/issues"
  },
  "homepage": "https://github.com/gumigumih/youtube-batch-dl#readme",
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "cli-progress": "^3.12.0",
    "clipboardy": "^4.0.0",
    "fs-extra": "^11.3.0",
    "prompts": "^2.4.2",
    "xlsx": "^0.18.5",
    "yt-dlp-wrap": "^2.3.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "tailwindcss": "^3.4.17",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0",
    "autoprefixer": "^10.4.19"
  },
  "build": {
    "appId": "com.youtube-batch-dl.app",
    "productName": "YouTube Downloader",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "dist/**/*",
      "downloader.js",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "data",
        "to": "data",
        "filter": ["**/*"]
      },
      {
        "from": "bin",
        "to": "yt-dlp",
        "filter": ["**/*"]
      }
    ],
    "afterPack": "./scripts/after-pack.js",
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "publisherName": "YouTube Batch Downloader"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
